<h1>Profil de <%= @user.first_name %> <%= @user.last_name %></h1>
<p>Email : <%= @user.email %></p>


<h2>Mes gonflables en location</h2>
<div class="container">
  <ul class="list-group">
    <% if @gonflables.any? %>
      <% @gonflables.each do |gonflable| %>
        <div class="card-product">
          <div class="card-product-infos">
            <h2>
              <strong>
                <%= link_to gonflable.name, gonflable_path(gonflable) %>
              </strong>
            </h2>


              <div class="conatainer-card">
                <% if gonflable.photo.attached? %>
                  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path gonflable.photo.key, height: 300, crop: :fill %>')">
                    <%= link_to edit_gonflable_path(gonflable) do %>
                        <i class="fa-regular fa-pen-to-square"></i>
                    <% end %>
                  </div>
                <% else %>
                  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://cdn.shopify.com/s/files/1/1797/8719/products/BeBop-8-en-1-Activite-gonflable-Chateau-gonflable.JPG?v=1551973948')">
                  </div>
                <% end %></p>
              </div>


            <p>Prix : <%= gonflable.price %>€</p>
          </div>
        </div>
      <% end %>
    <% else %>
      <li class="list-group-item">Vous n'avez pas encore ajouté de gonflables.</li>
    <% end %>
  <%= link_to "Ajouter un gonflable", new_gonflable_path %>

  </ul>
</div>


<h2>Mes gonflables</h2>


