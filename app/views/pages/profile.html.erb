  <h2 class="my-4">Mes Réservations</h2>
  <table class="table table-striped table_hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Nom du Gonflable</th>
        <th scope="col">Date départ</th>
        <th scope="col">Date fin</th>
        <th scope="col">Statut</th>
      </tr>
    </thead>
    <tbody>
      <% if @user.gonflables.present? %>
        <% @user.gonflables.each_with_index do |gonflable, index| %>
        <% rent = Rent.find_by(gonflable: @gonflable, user: @user) %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
            <td><%= link_to "gonflable.name", gonflable_path(gonflable) %></td>
            <td><%=%></td>
            <td><%=%></td>
            <td><%=%></td>
          </th>
        <% end %>
      <% else %>
        <tr>
          <td colspan="5" class="text-center">
            Vous n'avez effectué aucune réservation.
          </td>
        </tr>
      <% end %>

  </ul>
</div>
    </tbody>
  </table>
</div>
