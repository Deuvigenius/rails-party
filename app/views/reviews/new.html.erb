<div class="container review">
<h1>Donnez votre avis sur <%= @gonflable.name %></h1>

<%= form_with model: [@gonflable, @review], local: true do |form| %>
  <div class="form-group">
    <%= form.label :content, "Votre avis" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :rating, "Votre note (entre 1 et 5)" %>
    <%= form.number_field :rating, min: 1, max: 5, class: "form-control" %>
  </div>

  <%= form.submit "Envoyer", class: "btn" %>
<% end %>
</div>
