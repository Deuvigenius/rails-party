<div class="container edit">
  <h1>Modifier mon Gonflable</h1>
  <%= form_with model: @gonflable, local: true do |form| %>
    <div class="form-group">
      <%= form.label :name, "Nom du gonflable" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :content, "Description" %>
      <%= form.text_area :content, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :price, "Prix (€)" %>
      <%= form.number_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :address, "Adresse" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :photo, "Déposez une image"%>
      <%= form.file_field :photo, accept: "image/gif, image/jpg, image/jpeg, image/png" %>
    </div>
      <%= form.submit "Ajouter", class: "btn" %>
  <% end %>

  <%= link_to "Retour", user_profile_path %>
</div>
